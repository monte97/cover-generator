{{!-- name: Generative Voronoi --}}
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        html, body { width: {{width}}px; height: {{height}}px; overflow: hidden; }
        body { font-family: 'Mulish', -apple-system, BlinkMacSystemFont, sans-serif; }
        canvas { position: absolute; top: 0; left: 0; }
        .overlay {
            position: absolute; top: 0; left: 0;
            width: {{width}}px; height: {{height}}px;
            display: flex; flex-direction: column;
            justify-content: center; align-items: center;
            text-align: center;
            padding: 60px 80px;
            background: radial-gradient(
                ellipse at center,
                rgba(0,0,0,0.6) 0%,
                rgba(0,0,0,0.25) 55%,
                rgba(0,0,0,0.1) 100%
            );
        }
        .category {
            font-size: 16px; font-weight: 700;
            text-transform: uppercase; letter-spacing: 3px;
            color: {{colors.[0]}};
            margin-bottom: 16px;
        }
        .title {
            font-size: 48px; font-weight: 700;
            line-height: 1.15; color: #fff;
            max-width: 85%;
            text-shadow: 0 2px 20px rgba(0,0,0,0.5);
        }
        .footer {
            position: absolute; bottom: 30px; left: 80px; right: 80px;
            display: flex; justify-content: space-between; align-items: center;
            font-size: 13px; color: rgba(255,255,255,0.8);
        }
    </style>
</head>
<body>
    <canvas id="c" width="{{width}}" height="{{height}}"></canvas>
    <div class="overlay">
        <div class="category">{{categoryLabel}}</div>
        <div class="title">{{title}}</div>
    </div>
    <div class="footer">
        {{> social-footer theme="dark"}}
    </div>
    <script>
    (function() {
        function mulberry32(a) {
            return function() {
                a |= 0; a = a + 0x6D2B79F5 | 0;
                var t = Math.imul(a ^ a >>> 15, 1 | a);
                t = t + Math.imul(t ^ t >>> 7, 61 | t) ^ t;
                return ((t ^ t >>> 14) >>> 0) / 4294967296;
            };
        }

        function hashStr(str) {
            var h = 0;
            for (var i = 0; i < str.length; i++) {
                h = ((h << 5) - h + str.charCodeAt(i)) | 0;
            }
            return h;
        }

        function hexToRgb(hex) {
            var r = parseInt(hex.slice(1,3), 16);
            var g = parseInt(hex.slice(3,5), 16);
            var b = parseInt(hex.slice(5,7), 16);
            return [r, g, b];
        }

        var W = {{width}}, H = {{height}};
        var canvas = document.getElementById('c');
        var ctx = canvas.getContext('2d');
        var seed = hashStr('{{title}}');
        var rand = mulberry32(seed);

        var c1 = hexToRgb('{{colors.[0]}}');
        var c2 = hexToRgb('{{colors.[1]}}');

        // Background
        ctx.fillStyle = '#0a0a1a';
        ctx.fillRect(0, 0, W, H);

        // Generate seed points
        var NUM_POINTS = 80 + Math.floor(rand() * 40);
        var points = [];
        for (var i = 0; i < NUM_POINTS; i++) {
            points.push({ x: rand() * W, y: rand() * H });
        }

        // Draw Voronoi via brute-force pixel sampling
        // Sample at lower resolution for performance, then draw cells
        var STEP = 4;
        var cellColors = [];
        for (var i = 0; i < NUM_POINTS; i++) {
            var t = i / NUM_POINTS;
            // Mix colors with some randomness
            var jitter = (rand() - 0.5) * 0.3;
            t = Math.max(0, Math.min(1, t + jitter));
            var r = Math.round(c1[0] + (c2[0] - c1[0]) * t);
            var g = Math.round(c1[1] + (c2[1] - c1[1]) * t);
            var b = Math.round(c1[2] + (c2[2] - c1[2]) * t);
            cellColors.push([r, g, b]);
        }

        // For each pixel block, find nearest point
        for (var py = 0; py < H; py += STEP) {
            for (var px = 0; px < W; px += STEP) {
                var minDist = Infinity;
                var minDist2 = Infinity;
                var closest = 0;

                for (var i = 0; i < NUM_POINTS; i++) {
                    var dx = px - points[i].x;
                    var dy = py - points[i].y;
                    var d = dx * dx + dy * dy;
                    if (d < minDist) {
                        minDist2 = minDist;
                        minDist = d;
                        closest = i;
                    } else if (d < minDist2) {
                        minDist2 = d;
                    }
                }

                var cc = cellColors[closest];
                // Edge detection: darken pixels near cell boundaries
                var edgeDist = Math.sqrt(minDist2) - Math.sqrt(minDist);
                var edgeThreshold = 6;

                if (edgeDist < edgeThreshold) {
                    // Cell edge — draw bright line
                    var edgeAlpha = 0.15 + (1 - edgeDist / edgeThreshold) * 0.25;
                    ctx.fillStyle = 'rgba(' + cc[0] + ',' + cc[1] + ',' + cc[2] + ',' + edgeAlpha + ')';
                } else {
                    // Cell interior — subtle fill
                    ctx.fillStyle = 'rgba(' + cc[0] + ',' + cc[1] + ',' + cc[2] + ',0.06)';
                }
                ctx.fillRect(px, py, STEP, STEP);
            }
        }

        // Draw seed points as small dots
        for (var i = 0; i < NUM_POINTS; i++) {
            if (rand() < 0.3) {
                var cc = cellColors[i];
                ctx.beginPath();
                ctx.arc(points[i].x, points[i].y, 1.5 + rand() * 2, 0, Math.PI * 2);
                ctx.fillStyle = 'rgba(' + cc[0] + ',' + cc[1] + ',' + cc[2] + ',0.4)';
                ctx.fill();
            }
        }
    })();
    </script>
</body>
</html>
